<% if object.errors.any? %> <!-- Se objeto repassado tiver algum erro -->
    <div class="">
        <div class="alert alert-danger">
            Ops! Encontramos <%= pluralize(object.errors.count, 'erro', 'erros') %> <!-- se for mais de um erro passa a palavra erro para erros -->
            <ul>
                <% object.errors.full_messages.each do |msg| %> <!-- exibe as mensagens -->
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    </div>
<% end %>